<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Zip_Rule</fullName>
    <active>true</active>
    <errorConditionFormula>!REGEX(Zip_Code__c,&quot;^(\\d{5}(\\-\\d{4})?)?$&quot;)</errorConditionFormula>
    <errorDisplayField>Zip_Code__c</errorDisplayField>
    <errorMessage>Zip code must be in format 99999 or 99999-9999</errorMessage>
</ValidationRule>
